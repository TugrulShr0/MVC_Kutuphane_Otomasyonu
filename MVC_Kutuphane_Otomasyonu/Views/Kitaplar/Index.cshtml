@model List<MVC_Kutuphane_Otomasyonu_Entities.Model.Kitaplar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kitap Listesi
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kitap Türü</th>
                            <th>Barkod No</th>
                            <th>Kitap Adı</th>
                            <th>Yazarı</th>
                            <th>Eklenme Tarihi</th>
                            <th>Silindi Mi ?</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@(item.KitapTurleri?.KitapTuru)</td>
                                <td>@item.BarkodNo</td>
                                <td>@item.KitapAdı</td>
                                <td>@item.Yazar</td>
                                <td>@item.EklenmeTarihi.ToShortDateString()</td>
                                <td>
                                    <input type="checkbox" @(item.SilindiMi ? "checked" : "") disabled />
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" }) |
                                    @Html.ActionLink("Detay", "Detay", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                                    @Html.ActionLink("Sil", "Sil", new { id = item.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bu kitabı silmek istediğinize emin misiniz?');" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
