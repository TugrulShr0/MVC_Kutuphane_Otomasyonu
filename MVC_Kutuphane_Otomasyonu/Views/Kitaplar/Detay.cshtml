

@model MVC_Kutuphane_Otomasyonu_Entities.Model.Kitaplar



@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>@Html.DisplayFor(x => x.ID) nolu Kitap Bilgileri</b>
            </div>
            <div class="form-group">
                <b>Kitap Türü : </b>
                @Html.DisplayFor(x => x.KitapTurleri.KitapTuru)
            </div>
            <div class="form-group">
                <b>Barkod No : </b>
                @Html.DisplayFor(x => x.BarkodNo)
            </div>
            <div class="form-group">
                <b>Kitap Adı : </b>
                @Html.DisplayFor(x => x.KitapAdı)
            </div>
            <div class="form-group">
                <b>Yazar Adı : </b>
                @Html.DisplayFor(x => x.Yazar)
            </div>
            <div class="form-group">
                <b>Yayın Evi : </b>
                @Html.DisplayFor(x => x.Yayinevi)
            </div>
            <div class="form-group">
                <b>Sayfa Sayısı : </b>
                @Html.DisplayFor(x => x.SayfaSayisi)
            </div>
            <div class="form-group">
                <b>Stok Adedi : </b>
                @Html.DisplayFor(x => x.StokAdedi)
            </div>
            <div class="form-group">
                <b>Açıklama : </b>
                @Html.DisplayFor(x => x.Aciklama)
            </div>
            <div class="form-group">
                <b>Eklenme Tarihi : </b>
                @Html.DisplayFor(x => x.EklenmeTarihi)
            </div>
            <div class="form-group">
                <b>Güncellenme Tarihi : </b>
                @Html.DisplayFor(x => x.GuncellenmeTarihi)
            </div>
            <div class="form-group">
                <b>Silindi Mi : </b>
                @Html.CheckBoxFor(x => x.SilindiMi)
            </div>
            <div class="form-group">
                @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-info" })
            </div>
        </div>
    </div>
</div>