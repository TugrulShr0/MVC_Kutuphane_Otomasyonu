@model MVC_Kutuphane_Otomasyonu_Entities.Model.İletisim
@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewBag.Title = "İletişim";
}
<style>
    .contact-container {
        max-width: 450px; 
        margin: 30px auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h3 {
        color: #2c3e50;
        text-align: center;
        font-size: 1.4rem; 
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 12px; 
    }

        .form-group b {
            display: block;
            margin-bottom: 5px;
            color: #555;
            font-size: 0.85rem; 
        }

    .form-control {
        border-radius: 6px;
        padding: 8px 12px; 
        font-size: 0.9rem;
        border: 1px solid #ddd;
    }

    .btn-submit {
        width: 100%;
        background-color: #3498db;
        border: none;
        padding: 10px;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
        margin-top: 10px;
    }

        .btn-submit:hover {
            background-color: #2980b9;
        }

    .text-danger {
        font-size: 0.75rem;
    }
</style>

<b>

</b>
<h3>İLETİŞİM</h3>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <b>Adı Soyadı</b>
        @Html.TextBoxFor(model => model.AdSoyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.AdSoyad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <b>E-mail</b>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <b>Başlık</b>
        @Html.TextBoxFor(model => model.Baslik, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <b>Mesaj</b>
        @Html.TextAreaFor(model => model.Mesaj, new { @class = "form-control", rows = "5" })
        @Html.ValidationMessageFor(model => model.Mesaj, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <b>Açıklama</b>
        @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", rows = "3" })
        @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Gönder</button>
}