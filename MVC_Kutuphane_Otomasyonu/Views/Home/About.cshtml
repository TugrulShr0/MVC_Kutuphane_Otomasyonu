
@model List<MVC_Kutuphane_Otomasyonu_Entities.Model.Hakkimizda>
@{
    Layout = "~/Views/Shared/_GenelLayout.cshtml";
    ViewBag.Title = "Hakkımızda";
}

<style>
    .about-section {
        padding: 60px 0;
        background-color: #f8f9fa;
    }

    .about-title {
        font-weight: 700;
        color: #333;
        margin-bottom: 30px;
        position: relative;
        display: inline-block;
    }

        .about-title::after {
            content: '';
            width: 50%;
            height: 3px;
            background: #007bff;
            position: absolute;
            bottom: -10px;
            left: 0;
        }

    .about-content {
        line-height: 1.8;
        font-size: 1.1rem;
        color: #555;
        text-align: justify;
    }

    .content-card {
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        border-radius: 15px;
        padding: 40px;
        background: #fff;
    }
</style>

<main class="about-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="content-card">
                    <h2 class="about-title text-uppercase">HAKKIMIZDA</h2>

                    <div class="about-content mt-4">
                        @foreach (var item in Model)
                        {
                            <p>@item.Icerik</p>
                            <hr class="my-4" style="border-top: 1px dashed #ddd;" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>