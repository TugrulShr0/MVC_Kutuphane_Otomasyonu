@model List<MVC_Kutuphane_Otomasyonu_Entities.Model.Kullanicilar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kullanıcı Listesi
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kullanıcı</th>
                            <th>Adı Soyadı</th>
                            <th>Telefon</th>
                            <th>E-mail</th>
                            <th>Kayıt Tarihi Tarihi</th>
                         
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@(item.KullanıcıAdı)</td>
                                <td>@item.AdSoyad</td>
                                <td>@item.Telefon</td>
                                <td>@item.Email</td>
                                <td>@item.KayitTarihi</td>  
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" }) |
                                    @Html.ActionLink("Detay", "Detay", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                                    @Html.ActionLink("Sil", "Sil","Kullanicilar", new { id = item.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bu kitabı silmek istediğinize emin misiniz?');" }) |
                                    @Html.ActionLink("Rolleri", "Krolleri", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>

