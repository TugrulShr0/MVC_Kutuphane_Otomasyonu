@model List<MVC_Kutuphane_Otomasyonu_Entities.Model.KullanıcıRolleri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Kullanıcı Rolleri Listesi
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Kullanıcı</th>
                            <th>Rol</th>
                       
                            <th>İşlemler</th>

                    
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@(item.KullanıcıID)</td>
                                <td>@item.Roller.Rol</td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Duzenle", "Roller", new { id = item.ID }, new { @class = "btn btn-primary btn-sm" }) |
                                    @Html.ActionLink("Detay", "Detay", "Roller", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                                    @Html.ActionLink("Sil", "Sil","Roller", new { id = item.ID }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bu kitabı silmek istediğinize emin misiniz?');" }) 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    @Html.ActionLink("Yeni", "Ekle", "Roller", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>


