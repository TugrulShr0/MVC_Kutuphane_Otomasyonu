@model MVC_Kutuphane_Otomasyonu_Entities.Model.KitapTurleri
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">

        <div class="ibox">
            <div class="ibox-head">
                Kitap Türü Ekle
            </div>
            <div class="ibox-body">
                @using (Html.BeginForm("Ekle", "KitapTurleri", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(x => x.KitapTuru)
                        @Html.TextBoxFor(x => x.KitapTuru, new { @class = "form-control", placeholder = "Kitap Türü" })
                        @Html.ValidationMessageFor(x => x.KitapTuru, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Aciklama)
                        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Açıklama", rows = 3 })
                        @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Ekle" class="btn btn-success" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
