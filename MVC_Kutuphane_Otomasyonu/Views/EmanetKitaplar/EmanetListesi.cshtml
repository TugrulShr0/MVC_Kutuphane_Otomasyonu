@model List<MVC_Kutuphane_Otomasyonu_Entities.Model.EmanetKitaplar>
@{
    ViewBag.Title = "EmanetListesi";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<head>

    <title>Emanet Kitaplar Listesi </title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

            table th td {
                border: 1px solid black;
                padding: 8px;
                text-align: left;
            }
    </style>
</head>

<body>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Üye</th>
                <th>Kitap</th>
                <th>Kitap Sayısı</th>
                <th>Aldığı Tarih</th>
                <th>İade Tarihi</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@(item.Uyeler.AdSoyad)</td>
                    <td>@item.kitaplar.KitapAdı</td>
                    <td>@item.KitapSayisi</td>
                    <td>@item.EmanetTarihi</td>
                    <td>@item.IadeTarihi</td>

                </tr>
            }
        </tbody>
    </table>
</body>



